<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="500" Height="250"
        x:Class="Dice.Avalonia.MainWindow"
        Title="Dice"
        Icon="/Assets/plainicon.ico"
        TransparencyLevelHint="Mica"
        CanResize="False"
        Background="Transparent">

    <Panel Name="RootPanel">
        <ExperimentalAcrylicBorder IsHitTestVisible="False" Name="AcrylicBorder">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial TintColor="Black" TintOpacity="1" MaterialOpacity="0.9" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Panel Name="HeaderPanel" IsVisible="False" Margin="0">
            <Panel Margin="0">
                <Button VerticalAlignment="Top" HorizontalAlignment="Left" Background="Transparent" Command="{Binding AboutWindowCommand}">
                    <StackPanel Orientation="Horizontal">
                        <ContentControl>
                            <Image Source="/Assets/plainicon.ico" Width="20" Height="20" />
                        </ContentControl>
                        <TextBlock Text="Dice" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="7,0,0,0" />
                    </StackPanel>
                </Button>
            </Panel>
        </Panel>

        <Panel Name="MainPanel" Margin="0,0,0,0">
            <Panel Name="ContentPanel" Margin="0,7,0,0">
                <!-- Browse -->
                <Label Width="35" Height="30" Margin="7,13,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Path" />
                <TextBox x:Name="InitialDirectory" Height="30" Margin="50,7,115,0" VerticalAlignment="Top" LostFocus="InitialDirectoryOnLostFocus"
                         VerticalContentAlignment="Center" />
                <!-- ReSharper disable once UnusedMember.Global -->
                <Button Name="Browse" Margin="0,10,7,0" HorizontalAlignment="Right" VerticalAlignment="Top" Click="BrowseClick" Width="100" Height="30">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock VerticalAlignment="Center" Text="browse" />
                    </StackPanel>
                </Button>
                <!-- throw the dice -->
                <!-- ReSharper disable once Xaml.StyleClassNotFound -->
                <Button Name="ThrowTheDice" Command="{Binding ThrowTheDiceCommand}" Margin="7,47,7,7" Classes="accent"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch" PointerPressed="ThrowTheDiceOnPointerPressed">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Name="ThrowTheDiceContent" VerticalAlignment="Center" Text="{Binding ThrowTheDiceContentText}" />
                    </StackPanel>

                </Button>
            </Panel>
        </Panel>
    </Panel>
</Window>