<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>net462;net472</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>plainicon.ico</ApplicationIcon> 
    <Version>2019.3.12.750</Version> 
    <Authors>Sebastian Walter</Authors> 
    <Company>evilbaschdi</Company> 
    <PackageProjectUrl>https://github.com/evilbaschdi/Dice</PackageProjectUrl> 
    <RepositoryUrl>https://github.com/evilbaschdi/Dice</RepositoryUrl> 
    <PackageIconUrl>https://github.com/evilbaschdi/Dice/blob/master/Dice/plainicon.ico</PackageIconUrl> 
    <Copyright>Copyright © 2015 - 2019 evilbaschdi</Copyright>    
  </PropertyGroup>
  <ItemGroup>
    <None Remove="dice.png" />
    <None Remove="Dice.VisualElementsManifest.xml" />
    <None Remove="dice_150.png" />
    <None Remove="dice_70.png" />
    <None Remove="plainicon.ico" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="dice.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Dice.VisualElementsManifest.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="dice_150.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="dice_70.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="ControlzEx" Version="4.0.0-alpha0232" />
    <PackageReference Include="EvilBaschdi.Core" Version="2019.3.9.1706-develop" />
    <PackageReference Include="EvilBaschdi.CoreExtended" Version="2019.3.9.1706-develop" />
    <PackageReference Include="MahApps.Metro" Version="2.0.0-alpha0262" />
    <PackageReference Include="MahApps.Metro.IconPacks" Version="3.0.0-alpha0134" />    
  </ItemGroup>
  <ItemGroup>
    <Reference Include="mscorlib" />
  </ItemGroup>
  <ItemGroup>
    <Resource Include="plainicon.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Properties\Settings.Designer.cs">
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <None Update="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
  </ItemGroup>
</Project>